header.header 
 nav.nav.nav--tours
     a.nav__el(href='/') ALL tours 
 .header__logo
   img(src='/img/logo-white.png' alt='Natours logo')
 nav.nav.nav--user 
   if user
    a.nav__el.nav__el--logout--s Log Out
    a.nav__el(href='/me') 
      img.nav__user-img(src=`.././img/users/${user.photo}` alt=`photo of ${user.name.split(' ')[0]}`)
      span=user.name.split(' ')[0]
   else  
    a.nav__el(href='/login') Log in
    a.nav__el.nav__el--cta(href='/sign-up') Sign up